{
  "name": "zk-invoice",
  "workspaces": {
    "packages": ["packages/*"],
    "catalog": {
      "@aztec/aztec.js": "3.0.0-devnet.2",
      "@aztec/accounts": "3.0.0-devnet.2",
      "@aztec/constants": "3.0.0-devnet.2",
      "@aztec/entrypoints": "3.0.0-devnet.2",
      "@aztec/ethereum": "3.0.0-devnet.2",
      "@aztec/foundation": "3.0.0-devnet.2",
      "@aztec/noir-contracts.js": "3.0.0-devnet.2",
      "@aztec/pxe": "3.0.0-devnet.2",
      "@aztec/stdlib": "3.0.0-devnet.2",
      "@aztec/test-wallet": "3.0.0-devnet.2",
      "@jest/globals": "^30.0.5",
      "@types/bun": "latest",
      "@types/jest": "^30.0.0",
      "dotenv": "^17.2.1",
      "jest": "^30.0.5",
      "typescript": "^5.0.0"
    }
  },
  "scripts": {
    "postinstall": "bun run scripts/token.ts --skip-submodules",
    "sandbox": "bun run scripts/docker.ts sandbox api",
    "testnet": "bun run scripts/docker.ts api",
    "anvil": "anvil --host 0.0.0.0 --silent",
    "api": "bun run --filter @zk-invoice/api start",
    "api:dev": "bun run --filter @zk-invoice/api dev",
    "test": "bun run --filter @zk-invoice/api test",
    "test:api": "bun run --filter @zk-invoice/api test",
    "test:contracts": "bun run --filter @zk-invoice/contracts test"
  },
  "config": {
    "aztecVersion": "3.0.0-devnet.2"
  }
}
