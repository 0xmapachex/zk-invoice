{
  "name": "@zk-invoice/contracts",
  "type": "module",
  "main": "./ts/src/index.ts",
  "types": "./ts/src/index.ts",
  "exports": {
    ".": "./ts/src/index.ts",
    "./artifacts": "./ts/src/artifacts/index.ts",
    "./constants": "./ts/src/constants.ts",
    "./contract": "./ts/src/contract.ts",
    "./fees": "./ts/src/fees.ts",
    "./utils": "./ts/src/utils.ts"
  },
  "scripts": {
    "test": "bun run test:nr && bun test",
    "test:nr": "aztec test",
    "compile": "aztec-nargo compile && aztec-postprocess-contract",
    "codegen": "aztec codegen target --outdir ts/src/artifacts/registry -f && rm -f ts/src/artifacts/registry/Token.ts",
    "copy-artifacts": "bun run scripts/add_artifacts.ts",
    "build": "bun run compile && bun run codegen && bun run copy-artifacts"
  },
  "dependencies": {
      "@aztec/aztec.js": "3.0.0-devnet.2",
      "@aztec/accounts": "3.0.0-devnet.2",
      "@aztec/constants": "3.0.0-devnet.2",
      "@aztec/ethereum": "3.0.0-devnet.2",
      "@aztec/entrypoints": "3.0.0-devnet.2",
      "@aztec/foundation": "3.0.0-devnet.2",
      "@aztec/noir-contracts.js": "3.0.0-devnet.2",
      "@aztec/pxe": "3.0.0-devnet.2",
      "@aztec/stdlib": "3.0.0-devnet.2",
      "@aztec/test-wallet": "3.0.0-devnet.2"
  },
  "devDependencies": {
      "@types/bun": "latest",
      "@types/jest": "^30.0.0",
      "jest": "^30.0.5",
      "@jest/globals": "^30.0.5",
      "dotenv": "^17.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
